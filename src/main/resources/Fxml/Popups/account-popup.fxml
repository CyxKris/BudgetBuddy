<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="200.0" prefWidth="289.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cyx.budgetbuddy.Controllers.AccountPopupController">
   <padding>
      <Insets left="16.0" right="16.0" top="16.0" />
   </padding>
   <content>
      <VBox prefHeight="150.0" prefWidth="228.0" spacing="16.0">
         <VBox prefHeight="61.0" prefWidth="208.0" spacing="4.0">
            <Label text="Account Balance" />
            <TextField fx:id="accountBalance" prefHeight="32.0" prefWidth="181.0" />
         </VBox>
         <HBox alignment="TOP_RIGHT" prefHeight="52.0" prefWidth="208.0" spacing="10.0">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="cancel" text="Cancel" />
            <Button fx:id="saveButton" mnemonicParsing="false" styleClass="save" text="Save" />
         </HBox>
      </VBox>
   </content>
   <stylesheets>
      <URL value="@../../Css/app.css" />
      <URL value="@../../Css/popup.css" />
   </stylesheets>
   <header>
      <Label styleClass="header" text="Edit Account" />
   </header>
   <effect>
      <DropShadow />
   </effect>
</DialogPane>
