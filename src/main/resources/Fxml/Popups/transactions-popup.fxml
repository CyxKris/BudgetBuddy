<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane fx:id="addTransactionPopup" prefHeight="350.0" prefWidth="290.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cyx.budgetbuddy.Controllers.TransactionPopupController">
   <padding>
      <Insets left="16.0" right="16.0" top="16.0" />
   </padding>
   <content>
      <VBox prefHeight="340.0" prefWidth="200.0" spacing="16.0">
         <VBox prefHeight="200.0" prefWidth="100.0" spacing="4.0">
            <Label text="Category" />
            <ChoiceBox fx:id="categoryChoiceBox" prefHeight="30.0" prefWidth="238.0" />
         </VBox>
         <VBox layoutX="20.0" layoutY="20.0" prefHeight="200.0" prefWidth="100.0" spacing="4.0">
            <Label text="Description" />
            <TextField fx:id="descriptionField" />
         </VBox>
         <VBox layoutX="20.0" layoutY="90.0" prefHeight="200.0" prefWidth="100.0" spacing="4.0">
            <Label text="Amount" />
            <TextField fx:id="transactionAmount" />
         </VBox>
         <VBox layoutX="20.0" layoutY="20.0" prefHeight="200.0" prefWidth="100.0" spacing="4.0">
            <Label text="Date" />
            <DatePicker fx:id="date" prefHeight="25.0" prefWidth="239.0" />
         </VBox>
         <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="cancel" text="Cancel" />
            <Button fx:id="saveButton" mnemonicParsing="false" styleClass="save" text="Save" />
         </HBox>
      </VBox>
   </content>
   <stylesheets>
      <URL value="@../../Css/app.css" />
      <URL value="@../../Css/popup.css" />
   </stylesheets>
   <header>
      <Label styleClass="header" text="Add Transaction" />
   </header>
   <effect>
      <DropShadow />
   </effect>
</DialogPane>
